//Find x using binary search
public static int BinarySearch(int[] a, int x)
{
	int start = 0, end = a.Length - 1;
	while (start <= end)
	{
		int mid = (start + end) / 2;
		if (a[mid] == x)
		{
			return mid;
		}
		else if (a[mid] > x)
		{
			end = mid - 1;
		}
		else
		{
			start = mid + 1;
		}
	}

	return -1;
}
